{% extends 'offline_base.html.twig' %}

{% block title %}{{ parent() }} | Connexion{% endblock %}

{% block body %}
    <div class="row vertical-center-container full-page-y">

        <form method="post" class="col-10 col-sm-8 col-md-6 center-content security-form custom-font-text custom-bold-500">

            <h1 class="h3 mb-2 text-center display-4 custom-font-text">{{ project_title }}</h1>

            {% if error %}
                <div class="mt-3 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <label for="inputEmail" class="mt-2">Ton adresse email :</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>

            <label for="inputPassword" class="mt-2">Ton mot de passe :</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mt-2 mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Garder ma session ouverte
                </label>
            </div>

            <div class="row">
                <div class="col-12 col-lg-6 text-center text-lg-left">
                    <button class="btn btn-md btn-dark" type="submit">Connexion</button>
                    <br>
                    <a class="underline mt-3" href="{{ path('app_forgot_password_request') }}">J'ai oubli√© mon mot de passe</a>
                </div>
                <div class="col-12 col-lg-6 text-center text-lg-right pt-2">
                    <a href="{{ path('app_register') }}">Tu n'as pas encore de compte ?</a>
                </div>
            </div>
        </form>

    </div>
{% endblock %}
