{% extends 'offline_base.html.twig' %}

{% block title %}{{ parent() }} | Inscription{% endblock %}

{% block body %}
    <div class="row full-page-y center-container">
        {{ form_start(registrationForm, {'attr': {'class': 'col-10 col-sm-8 col-md-6 center-content security_form'}}) }}

        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1 class="h3 mb-2 text-center display-4 font-title">{{ project_title }}</h1>

        {{ form_label(registrationForm.email, 'Ton email') }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        <div class="alert-danger">
            {{ form_errors(registrationForm.email) }}
        </div>
        <small id="emailHelp" class="form-text text-muted mb-2">Promis ton email ne sera pas diffusé.</small>

        {{ form_label(registrationForm.firstname, 'Ton prénom') }}
        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control mb-2'}}) }}

        {{ form_label(registrationForm.lastname, 'Ton nom') }}
        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control mb-2'}}) }}

        {{ form_label(registrationForm.plainPassword.first, 'Ton mot de passe') }}
        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control mb-2'}}) }}

        {{ form_label(registrationForm.plainPassword.second, 'Encore une fois') }}
        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
        <div class="alert-danger">
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>

        <label class="mb-3 pointer-cursor w-100">
            {{ form_widget(registrationForm.agreeTerms) }}
            Conditions d'utilisations
            <div class="alert-danger">
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
        </label>


        <div class="row">
            <div class="col-12 col-md-6 text-center text-md-left">
                <button class="btn btn-md btn-dark" type="submit">Inscription</button>
            </div>
            <div class="col-12 col-md-6 text-center text-md-right pt-3">
                <a href="{{ path('app_login') }}">Tu as déjà un compte ?</a>
            </div>
        </div>


        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
