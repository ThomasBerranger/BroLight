{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Admin{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h2>Liste des utilisateurs</h2>
                    <table class="table table-striped table-responsive-sm w-100 mt-3">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <th scope="row">{{ user.id }}</th>
                                <td>{{ user }}</td>
                                <td>{{ user.email }}</td>
                                <td class="text-center">
                                    <a href="{{ path('user.show', {'slug': user.slug}) }}"><i class="fa fa-eye"></i></a> |
                                    <a href="{{ path('admin.user.delete', {'id': user.id}) }}"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}