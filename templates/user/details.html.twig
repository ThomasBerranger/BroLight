{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ user }}{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-12 col-lg-4 mb-2">
            <div class="row">
                <div class="col-12 col-md-6 col-lg-12 mb-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <img class="img-fluid img-md" alt="{{ user }} avatar" src='{{ user.avatar|formatAvatarData }}'/>
                        </div>
                        <h3 class="text-center">{{ user }}</h3>
                        <div class="d-flex justify-content-center mb-2">
                        <span id="followerButtonContainer-{{ user.id }}">
                            {{ include('user/_partials/_followerButton.html.twig') }}
                        </span>
                            <span id="followingButtonContainer-{{ user.id }}">
                            {{ include('user/_partials/_followingButton.html.twig') }}
                        </span>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-12 mb-3">
                    <div class="card">
                        <div class="row px-4">
                            <div class="col-4">
                                <div class="row">
                                    <div class="col-12 my-1-vh">
                                        {% if userPodium is not empty and userPodium[2] %}
                                            <a href="{{ path('movie.details', {'tmdbId': userPodium[2].id}) }}">
                                                <img class="podium-img-2" src="https://image.tmdb.org/t/p/w154{{ userPodium[2].poster_path }}" alt="{{ userPodium[1].title }} poster">
                                            </a>
                                        {% else %}
                                            <img class="podium-img-2" src="https://everyfad.com/static/images/movie_poster_placeholder.29ca1c87.svg" alt="Movie poster placeholder">
                                        {% endif %}
                                    </div>
                                    <div class="col-12 text-center font-weight-bold podium-2">
                                        2
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="row">
                                    <div class="col-12 my-1-vh">
                                        {% if userPodium is not empty and userPodium[1] %}
                                            <a href="{{ path('movie.details', {'tmdbId': userPodium[1].id}) }}">
                                                <img class="podium-img-1" src="https://image.tmdb.org/t/p/w154{{ userPodium[1].poster_path }}" alt="{{ userPodium[1].title }} poster">
                                            </a>
                                        {% else %}
                                            <img class="podium-img-1" src="https://everyfad.com/static/images/movie_poster_placeholder.29ca1c87.svg" alt="Movie poster placeholder">
                                        {% endif %}
                                    </div>
                                    <div class="col-12 text-center font-weight-bold podium-1">
                                        1
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="row">
                                    <div class="col-12 my-1-vh">
                                        {% if userPodium is not empty and userPodium[3] %}
                                            <a href="{{ path('movie.details', {'tmdbId': userPodium[3].id}) }}">
                                                <img class="podium-img-3" src="https://image.tmdb.org/t/p/w154{{ userPodium[3].poster_path }}" alt="{{ userPodium[1].title }} poster">
                                            </a>
                                        {% else %}
                                            <img class="podium-img-3" src="https://everyfad.com/static/images/movie_poster_placeholder.29ca1c87.svg" alt="Movie poster placeholder">
                                        {% endif %}
                                    </div>
                                    <div class="col-12 text-center font-weight-bold podium-3">
                                        3
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <p class="font-weight-bold">{{ user.views|length }} Film{{ user.views|length > 1 ? 's' }} vu{{ user.views|length > 1 ? 's' }} ({{ user.comments|length }} commenté{{ user.comments|length > 1 ? 's' }}):</p>
                    <hr class="my-2">
                    <div class="row">
                        {% for view in user.views|reverse %}
                            <div class="col-4 mb-3">
                                <a href="{{ path('movie.details', {'tmdbId': view.tmdbId}) }}">
                                    <img class="img-fluid" src="https://image.tmdb.org/t/p/w154{{ view.movie.poster_path }}" alt="{{ view.movie.title }} poster">
                                    {% if view.rate %}
                                        <img class="float-right rate-emoji-lg" style="position: absolute; bottom: -5px; right: -5px;" src="{{ view.rate.value|associatedEmojiURL }}" alt="rate emoji">
                                    {% endif %}
                                </a>
                            </div>
                            <div class="col-8">
                                {% if view.comment %}
                                    <div class="card-text text-left p-2">
                                        <p>{{ view.comment.content|nl2br }}</p>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-pills mb-3 d-flex justify-content-center" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="user-followers-tab" data-toggle="pill" href="#pills-followers" role="tab" aria-controls="pills-settings" aria-selected="true">{{ user.followers|length }} Abonné{{ user.followers|length > 1 ? 's' }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="user-followings-tab" data-toggle="pill" href="#pills-followings" role="tab" aria-controls="pills-relationships" aria-selected="false">{{ user.followings|length }} Abonnement{{ user.followings|length > 1 ? 's' }}</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="pills-followers" role="tabpanel" aria-labelledby="user-followers-tab">
                            {% for user in user.followers %}
                                {% include 'user/_partials/_userPanel.html.twig' with {'context': 'follower'} %}
                            {% endfor %}
                        </div>
                        <div class="tab-pane fade" id="pills-followings" role="tabpanel" aria-labelledby="user-followings-tab">
                            {% for user in user.followings %}
                                {% include 'user/_partials/_userPanel.html.twig' with {'context': 'following'} %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}


