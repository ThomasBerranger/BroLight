{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ user }}{% endblock %}

{% block body %}
    <div class="row">

        <div class="col-12 col-md-5">
            <div class="card">
                <div id="avatar-container" class="card-body text-center">
                    <img class="img-fluid" alt="{{ user }} avatar" src='{{ user.avatar|formatAvatarData }}'/>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-7">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h2>{{ user }}</h2>
                        <div class="text-right">
                            <span id="followerButtonContainer-{{ user.id }}">
                                {{ include('user/_followerButton.html.twig') }}
                            </span>
                            <span id="followingButtonContainer-{{ user.id }}">
                                {{ include('user/_followingButton.html.twig') }}
                            </span>
                        </div>
                    </div>
                    <p>{{ user.views|length }} Film{{ user.views|length > 1 ? 's' }} vu{{ user.views|length > 1 ? 's' }}</p>
                    <p>{{ user.followings|length }} Abonnement{{ user.followings|length > 1 ? 's' }}</p>
                    <p>{{ user.followers|length }} AbonnÃ©{{ user.followers|length > 1 ? 's' }}</p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-body">
                    <p>Genres favoris : <em>En cours de developpement ...</em></p>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-body">
                    <p>Badges : <em>En cours de developpement ...</em></p>
                </div>
            </div>
        </div>

    </div>
{% endblock %}


