{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Feed{% endblock %}

{% block body %}
    <ul class="timeline">

        {% for event in timeline %}
            <li {{ loop.index is divisible by(2)? 'class="timeline-inverted"'}}>
                <div class="timeline-badge"><i class="fa fa-circle"></i></div>
                <div class="timeline-panel">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="{{ path('user.show', {'slug': event.author.slug}) }}" class="d-flex align-items-center">
                                <img class="avatar-small" src="{{ event.author.avatar|formatAvatarData }}" alt="{{ event.author }} avatar">
                                <div>
                                    <span class="font-weight-bold">{{ event.author }}</span>
                                    <br>
                                    <span class="font-weight-light">J'ai vu {{ event.movie['title'] }} !</span>
                                </div>
                            </a>
                        </h5>

                        <p class="card-text">{{ event.movie['overview'] }}</p>

                        <a href="{{ path('movie.details', {'tmdbId': event.tmdbId}) }}">
                            <img class="img-fluid" src="https://image.tmdb.org/t/p/w500{{ event.movie.backdrop_path }}" alt="{{ event.movie.title }} poster">
                        </a>
                    </div>
                    <div class="card-footer text-right">
                        <p class="card-text">{{ event.createdAt|date('d/m/Y') }}</p>
                    </div>
                </div>
            </li>
        {% endfor %}

        <li style="float: none;"></li> {# Timline end #}
    </ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('feed') }}
{% endblock %}
