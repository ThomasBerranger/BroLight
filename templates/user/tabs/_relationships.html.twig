<div class="row">

    <div class="col-12 col-md-7">
        <div class="card mt-4">
            <div class="card-body row">
                <div id="followersDiv" class="col-12 col-lg-6">
                    <p class="text-center">AbonnÃ©{{ app.user.followers|length > 1 ? 's' }}</p>
                    <hr class="mb-2">
                    {% for user in app.user.followers %}
                        {% include 'user/_userPanel.html.twig' with {'context': 'follower'} %}
                    {% endfor %}
                </div>
                <div id="followings-container" class="col-12 col-lg-6 mt-2 mt-lg-0">
                    <p class="text-center">Abonement{{ app.user.followings|length > 1 ? 's' }}</p>
                    <hr class="mb-2">
                    {% for user in app.user.followings %}
                        {% include 'user/_userPanel.html.twig' with {'context': 'following'} %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-5">

        <div class="card my-4">
            <div class="card-body">
                <p>Demande{{ app.user.pendingFollowers|length > 1 ? 's' }} en attente</p>
                <hr class="mb-2">
                {% for user in app.user.pendingFollowers %}
                    {% include 'user/_userPanel.html.twig' with {'context': 'follower', 'buttonDisplay': true} %}
                {% endfor %}
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <label for="userSearchInput">Recherche d'amis :</label>
                <hr class="mb-2">
                <input id="userSearchInput" type="text" class="form-control form-control-sm" placeholder="Steven Spielberg">
                <div id="usersList" class="mt-3">
                    {% for user in users %}
                        {% include 'user/_userPanel.html.twig' with {'context': 'following', 'display': false, 'buttonDisplay': true} %}
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>

</div>