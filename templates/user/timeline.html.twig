{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Timeline{% endblock %}

{% block body %}
    <ul class="timeline">

        {% if timeline|length == 0 %}
            <div class="card">
                <div class="card-body text-center">
                    <p class="mb-2">Abonne toi à tes amis pour savoir quels flms ils ont vu !</p>
                    <a role="button" href="{{ path('user.edit') }}" class="btn btn-sm btn-info">Liste d'abonnés</a>
                </div>
            </div>
        {% endif %}

        {% for event in timeline %}
            <li {{ loop.index is divisible by(2)? 'class="timeline-inverted"'}}>
                <div class="timeline-badge"><i class="fa fa-circle"></i></div>
                <div class="timeline-panel">
                    <div class="card-body row">
                        <div class="col-4">
                            <a href="{{ path('movie.details', {'tmdbId': event.tmdbId}) }}">
                                <img class="img-fluid" src="https://image.tmdb.org/t/p/w154{{ event.movie.poster_path }}" alt="{{ event.movie.title }} poster">
                                {% if event.rate > 0 %}
                                    <img class="float-right rate-emoji-lg" style="position: absolute; bottom: -5px; right: -5px;" src="{{ event.rate|associatedEmojiURL }}" alt="rate emoji">
                                {% endif %}
                            </a>
                        </div>
                        <div class="col-8 pl-0">
                            <div class="card-title d-flex justify-content-start align-items-center">
                                <a href="{{ path('user.show', {'slug': event.author.slug}) }}" class="d-flex align-items-center">
                                    <img class="avatar-small" src="{{ event.author.avatar|formatAvatarData }}" alt="{{ event.author }} avatar">
                                </a>
                                <p class="ml-2">
                                    <a class="font-weight-bold" href="{{ path('user.show', {'slug': event.author.slug}) }}">{{ event.author }}</a><br>
                                    <span>{{ event.movie.title }}</span>
                                </p>
                            </div>
                            {% if event.comment %}
                                <div class="card-text text-left p-2" style="height: 9vh;">
                                    {% if event.isSpoiler %}
                                        <div class="spoiler-guard center-container bg-secondary pointer-cursor" style="border-radius: 5px">
                                            <p class="center-content text-white h6">Spoiler</p>
                                        </div>
                                        <p style="display: none">{{ event.comment|nl2br }}</p>
                                    {% else %}
                                        <p>{{ event.comment|nl2br }}</p>
                                    {% endif %}
                                </div>
                            {% else %}
                                <div class="card-text text-left p-2">J'ai vu ce film !</div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-footer text-right d-flex justify-content-between align-items-center">
                        {% if app.user == event.author %}
                            {% include 'opinion/_button.html.twig' with {'movie': event.movie} %}
                        {% endif %}
                        <p class="card-text">{{ event.createdAt|customDateFormat }}</p>
                    </div>
                </div>
            </li>
        {% endfor %}

        <li style="float: none;"></li> {# Timline end #}
    </ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('timeline') }}
{% endblock %}
