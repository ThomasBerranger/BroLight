{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Trending{% endblock %}

{% block body %}
    <div class="row pt-4-vh">
        {% for movie in trendingMovies %}
            {% if movie.poster_path is defined and movie.poster_path and movie.title is defined %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 py-3-vh px-2-vw center-container">
                    <a href="{{ path('movie.details', {'tmdbId': movie.id}) }}">
                        <img class="img-fluid" src="https://image.tmdb.org/t/p/w500{{ movie.poster_path }}" alt="{{ movie.title }} poster">
                    </a>
                    <div class="center-content-horizontally" style="width: 80%; bottom: 20px;">
                        <div class="d-flex justify-content-around">
                            {% for key, genre in movie.genres %}
                                {% if key <= 2 %}
                                    <button class="btn btn-xxs btn-danger font-weight-bold" style="font-size: 0.6rem">{{ genre.tmdbId == 878 ? 'SF' : genre.name|upper }}</button>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}