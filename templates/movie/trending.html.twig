{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Trending{% endblock %}

{% block body %}

    <div class="row justify-content-center">
        <h2 class="font-title mb-5">Les films tendances</h2>

        <div class="card-columns col-10">

            {% for movie in trendingMovies %}
                <div class="card mb-4">
                    {% if movie.poster_path is defined and movie.poster_path and movie.title is defined %}
                        <a href="{{ path('movie.details', {'tmdbId': movie.id}) }}">
                            <img class="card-img-top" src="https://image.tmdb.org/t/p/w500{{ movie.poster_path }}" alt="{{ movie.title }} poster">
                        </a>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ movie.title is defined ? movie.title }}</h5>
                        <p class="card-overview">{{ movie.overview is defined ? movie.overview|textLimit(130) }}</p>
                        <p class="card-text d-flex justify-content-between">
                            <small>
                                {% include 'movie/_viewButton.html.twig' %}
                                {% include 'comment/_commentButton.html.twig' %}
                            </small>
                            <small class="text-muted">{{ movie.release_date is defined ? movie.release_date|date("m/d/Y") }}</small>
                        </p>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}