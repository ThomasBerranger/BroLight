<div class="card-columns">

    {% for movie in movies %}
        <div class="card mb-4">
            {% if movie.poster_path %}
                <img class="card-img-top" src="https://image.tmdb.org/t/p/w500{{ movie.poster_path }}" alt="{{ movie.title }} poster">
            {% endif %}
            <div class="card-body">
                <h5 class="card-title">{{ movie.title ? movie.title }}</h5>
                <p class="card-overview">{{ movie.overview ? movie.overview|textLimit(130) }}</p>
                <p class="card-text d-flex justify-content-between align-items-center">
                            <span>
                                <i class="fa fa-eye-slash text-danger"></i>
                                <i class="fa fa-heart-o pointer-cursor text-success"></i>
                                <i class="fa fa-comment-o pointer-cursor text-danger"></i>
                            </span>
                    <small class="text-muted">{{ movie.release_date ? movie.release_date }}</small>
                </p>
            </div>
        </div>
    {% endfor %}

</div>