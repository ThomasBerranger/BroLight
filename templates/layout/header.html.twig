<nav class="navbar navbar-expand-sm fixed-top navbar-light bg-light">
    <a class="navbar-brand font-title" href="{{ path('home') }}">
        <img src="{{ asset('images/popcorn.png') }}" class="d-inline-block" alt="{{ project_title }} logo">
    </a>

    <h1 class="font-title">{{ project_title }}</h1>

    <button class="btn-header-sidebar"><i class="fa fa-bars"></i></button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item {{ app.request.get('_route') == 'movie.trending' ? 'active'}}">
                <a class="nav-link" href="{{ path('movie.trending') }}">Tendances</a>
            </li>
            <li class="nav-item {{ app.request.get('_route') == 'movie.search' ? 'active'}}">
                <a class="nav-link" href="{{ path('movie.search') }}">Recherche</a>
            </li>
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item {{ app.request.get('_route') == 'admin.home' ? 'active'}}">
                    <a class="nav-link" href="{{ path('admin.home') }}">Admin</a>
                </li>
            {% endif %}
        </ul>
        <div class="dropdown">
            <div class="btn-group">
                <button class="btn btn-sm {{ notifications > 0 ? 'btn-info' : 'btn-light' }}" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="far fa-bell"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    {% if notifications > 0 %}
                        <a class="dropdown-item" href="{{ path('user.edit') }}">{{ notifications }} Demande{{ notifications > 1 ? 's' }} en attente</a>
                    {% else %}
                        <p class="dropdown-item">Aucune notification</p>
                    {% endif %}
                </div>
            </div>
            <div class="btn-group">
                <button class="btn btn-sm btn-light btn-avatar" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img class="avatar-header" src="{{ app.user.avatar|formatAvatarData }}" alt="{{ app.user }} avatar">
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="{{ path('user.edit') }}"><i class="fa fa-user-edit mr-2"></i>Mon profil</a>
                    <a class="dropdown-item text-danger" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt mr-2"></i>Logout</a>
                </div>
            </div>
        </div>
    </div>
</nav>

<div id="alert" class="custom-alert px-4" role="alert" style="display: none"></div>

{% if app.flashes('firstTime') %}
    <span id="trigger-first-time-modal" class="d-none" data-user-firstname="{{ app.user.firstname }}" data-user-edit-link="{{ absolute_url(path('user.edit')) }}">Bienvenue sur {{ project_title }} !</span>
{% endif %}

<div class="modal fade" id="headerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-info" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>